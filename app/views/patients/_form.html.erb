<%= form_with model: @patient, local: true do |form| %>
  <p>
    <span class="head"><%= form.label :name %></span>
    <%= form.text_field :name, required: true %>
  </p>
  <p>
    <span class="head"><%= form.label :birthday %></span>
    <%= form.date_select(
             :birthday,
             start_year: 1910,
             end_year: 2000,
             defoult: Date.new(1950, 1, 1),
             required: true) %>
  </p>
  <p>
    <span class="head"><%= form.label :gender %></span>
    <%= form.text_field :gender, required: true %>
  </p>
  <p>
    <span class="head"><%= form.label :address %></span>
    <%= form.text_field :address, required: true %>
  </p>
  <p>
    <span class= "head"><%= form.label :degree_of_care %></span>
    <%= form.text_field :degree_of_care, required: true %>
  </p>
  <p>
    <span class="head"><%= form.label :key_person %></span>
    <%= form.text_field :key_person, required: true %>
  </p>
  <%= form.submit "送信" %>
<% end %>
